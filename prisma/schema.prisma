generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Configuration {
  id              String        @id
  width           Int
  height          Int
  croppedImageUrl String?
  imageUrl        String
  color           CaseColor?
  finish          CaseFinish?
  material        CaseMaterial?
  model           PhoneModel?
}

enum CaseColor {
  black
  blue
  rose
}

enum CaseFinish {
  smooth
  textured
}

enum CaseMaterial {
  silicone
  polycarbonate
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum PhoneModel {
  iphonex
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
}
